<% if user_signed_in? %>
    
    <%= link_to 'Edit Profile', edit_user_registration_path%><br/>
    <%= link_to 'Pets', pets_path%>
    <%= link_to 'Donations', donations_path%>
    <%= link_to 'Appointment', appointments_path%>
