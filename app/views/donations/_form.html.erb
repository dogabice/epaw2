<%= form_with(model: donation) do |form| %>
  <% if donation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
        <% donation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% form.label :donation_date, style: "display: block" %>
    <% form.datetime_field :donation_date %>
  </div>

  <div>
    <%= form.label :donation_amount, style: "display: block" %>
    <%= form.number_field :donation_amount %>
  </div>


  <% if user_signed_in? %>
    <div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <% elsif vet_signed_in? %>
    <div>
      <%= form.hidden_field :vet_id, value: current_vet.id %>
    </div>
  <% else %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>

<% end %>
