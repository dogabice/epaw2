<div class="container">
<%= form_with(model: donation) do |form| %>

  <% if donation.errors.any? %>
    <div class="error_message " style="top: 13%;">
      <ul>
        <% donation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
        <p>Please try again</p>
      </ul>
    </div>
  <% end %>
   
  <div class="form_inputs">

  <div class="form_input">
    <% form.datetime_field :donation_date, placeholder:"DONATION DATE: " %>
  </div>

  <div class="form_input">
    <%= form.number_field :donation_amount, placeholder:"DONATION AMOUNT: " %>
  </div>
  </div>


  <% if user_signed_in? %>
    <div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <% elsif vet_signed_in? %>
    <div>
      <%= form.hidden_field :vet_id, value: current_vet.id %>
    </div>
  <% else %>
  <% end %>


  <div>
    <%= form.submit class:"submitbutton",
    style:"width: 300px;
    height: 40px;
    border-radius:20px;
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);"%>
  </div>

<% end %>
</div>