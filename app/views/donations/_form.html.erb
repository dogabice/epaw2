<div class="container">
<%= form_with(model: donation) do |form| %>
  <% if donation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
        <% donation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   
  <div class="form_inputs">

  <div class="form_input">
    <% form.datetime_field :donation_date, placeholder:"DONATION DATE: " %>
  </div>

  <div class="form_input">
    <%= form.number_field :donation_amount, placeholder:"DONATION AMOUNT: " %>
  </div>
  </div>


  <% if user_signed_in? %>
    <div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <% elsif vet_signed_in? %>
    <div>
      <%= form.hidden_field :vet_id, value: current_vet.id %>
    </div>
  <% else %>
  <% end %>


  <div>
    <%= form.submit class:"submitbutton",
    style:"width: 300px;
    height: 40px;"%>
  </div>

<% end %>
</div>