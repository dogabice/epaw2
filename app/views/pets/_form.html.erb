<div class="container">
<%= form_with(model: pet, html: {multipart: true}) do |form| %>
  <% if pet.errors.any? %>
    <div  class="error_message " style="top:13%;">
      <ul>
          <li><%= 'Hatalı Giriş Yaptınız' %></li>
        <p>Please try again</p>
      </ul>
    </div>
  <% end %>

  <div class="form_inputs">

  <div class="pet-avatar">
  <em>PET PHOTO</em> </br>
  <%= form.file_field :avatar ,style:"padding-left: 10px; padding-top:10px;" %>
  </div>

  <div class="form_input">
    <%= form.text_field :pet_name, placeholder:"PET NAME"  %>
  </div>

  <div class="form_input">
    <%= form.date_field :pet_birthdate,placeholder:"PET BIRTH DATE"  %>
  </div>

  <div class="form_input">
    <%= form.text_field :animal_species,placeholder:"PET"  %>
  </div>

  <div class="form_input">
    <%= form.text_field :pet_kind,placeholder:"BREED"  %>
  </div>

  <div>
     <%= form.number_field :user_id, value: current_user.id , type:  :hidden%>
  </div>

  </div>

  <div>
    <%= form.submit class:"submitbutton",
    style:"width: 250px;
    height: 40px;
    border-radius:20px;
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translateX(-50%);"%>
  </div>
<% end %>
</div>